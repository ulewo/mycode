<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="member">
	<cacheModel id="user-cache" type="LRU" readOnly="true"
		serialize="false">
		<flushInterval hours="24" />
		<property value="500" name="size" />
	</cacheModel>
	
	<!--映射实体类 -->
	<typeAlias alias="member" type="com.ulewo.entity.Member" />
	
	<!--单笔查询-->
	<select id="selectById" resultClass="member" parameterClass="java.lang.Integer">
		select * from member where id= #id#
	</select>
	
	<!--多笔查询-->
	<select id="selectAll" resultClass="member">
		select * from member
	</select>
	
