<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="retalk">
	<cacheModel id="user-cache" type="LRU" readOnly="true"
		serialize="false">
		<flushInterval hours="24" />
		<property value="500" name="size" />
	</cacheModel>
	
	<typeAlias alias="retalk" type="com.ulewo.entity.ReTalk" />
	
	<!-- 添加留言 -->
	<insert id="addretalk" parameterClass="retalk">
		<selectKey keyProperty="id" resultClass="java.lang.Integer" type="post">
      		SELECT LAST_INSERT_ID()
    	 </selectKey>
        <![CDATA[
           insert into retalk(talkid,content,createtime,userid,username,usericon,atuserid,atusername,sourcefrom) 
		values(#talkId#,#content#,#createTime#,#userId#,#userName#,#userIcon#,#atUserId#,#atUserName#,#sourceFrom#)
        ]]>
	</insert>
	
	<!-- 查询留言 -->
	<select id="queryReTalk"  resultClass="retalk" parameterClass="java.util.Map">
	    select * from retalk  where talkid = #talkId# order by createtime desc limit #offset#,#total#
	</select>
	
	<!-- 查询留言总条数 -->
	<select id="queryCount"  resultClass="java.lang.Integer">
	    select count(id) from retalk where talkid=#talkId#;
	</select>
	
	<!-- 删除回复 -->
	<delete  id="delteReTalk" >
		delete from retalk where id =#retalkId#	    
	</delete>
	
	<!-- 更具用户id查询吐槽回复 -->
	<select id="queryReTalkByUserId"  resultClass="retalk" parameterClass="java.util.Map">
	    select r.*,t.content as talkcontent,t.userid as talkUserId,t.username as talkUserName from retalk r left outer join talk t on r.talkid=t.id  
	    where r.userid = #userId#
		<isEqual prepend="or" property="includeme" compareValue="0">
         	r.userid in (select friendid from user_friend where userid = #userId#)
		</isEqual>
	    order by createtime desc limit #offset#,#total#
	</select>
	
	<select id="queryReTalkCountByUserId"  resultClass="java.lang.Integer" parameterClass="java.util.Map">
	    select count(id) from retalk  where userid = #userId#
	   <isEqual prepend="or" property="includeme" compareValue="0">
         	userid in (select friendid from user_friend where userid = #userId#)
		</isEqual>
	</select>
	
	
	<!-- 查询所有留言 -->
	<select id="queryAllReTalk"  resultClass="retalk" parameterClass="java.util.Map">
	    select r.*,u.username userName from retalk r inner join user u on u.userid=r.userid  order by createtime desc limit #offset#,#total#
	</select>
	
	<!-- 查询留言总条数 -->
	<select id="queryAllCount"  resultClass="java.lang.Integer">
	    select count(1) from retalk r inner join user u on u.userid=r.userid
	</select>
	
</sqlMap>
